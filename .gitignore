# ========================
# General Project Configuration
# ========================
APP_NAME=AccountabilityBuddy
APP_ENV=local                # "local", "staging", or "production"
APP_URL=http://localhost:3000 # Frontend URL

# ========================
# Server & Backend Configuration
# ========================
PORT=5000                     # Backend server port
BACKEND_URL=http://localhost:${PORT} # Backend API base URL

# ========================
# Frontend Environment Variables
# ========================
NEXT_PUBLIC_API_BASE_URL=${BACKEND_URL}/api # Public-facing API base URL
NEXT_PUBLIC_STRIPE_PUBLIC_KEY=pk_test_XXXXXXXXXXXXXXXXXXXXXX # Replace with real key

# ========================
# Database Configuration
# ========================
DB_HOST=localhost             # Database host
DB_PORT=5432                  # PostgreSQL default port
DB_NAME=accountability_buddy  # Database name
DB_USER=your_db_user          # Database user
DB_PASSWORD=your_db_password  # Database password

# ========================
# Authentication & Security
# ========================
JWT_SECRET=supersecuresecret  # Secret for JWT tokens (ensure complexity)
JWT_EXPIRATION=3600           # JWT expiration in seconds (1 hour)

# ========================
# Stripe Payment Gateway
# ========================
STRIPE_SECRET_KEY=sk_test_XXXXXXXXXXXXXXXXXXXXXX # Replace with real secret key
STRIPE_WEBHOOK_SECRET=whsec_XXXXXXXXXXXXXXXXXXXX # Replace with real webhook secret

# ========================
# Email Configuration
# ========================
EMAIL_HOST=smtp.your-email-provider.com  # SMTP server host
EMAIL_PORT=587                           # SMTP port (587 for TLS, 465 for SSL)
EMAIL_USER=your-email@example.com        # SMTP username
EMAIL_PASSWORD=your-email-password       # SMTP password
EMAIL_FROM="Accountability Buddy <noreply@accountabilitybuddy.com>"
EMAIL_USE_TLS=true                        # Use TLS for secure email sending

# ========================
# AWS Configuration (if applicable)
# ========================
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME=accountability-buddy-assets

# ========================
# Logging and Debugging
# ========================
LOG_LEVEL=info                     # Default logging level (debug, info, warn, error)
DEBUG=false                         # Set to "true" in development, "false" in production

# ========================
# Third-party Services
# ========================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# ========================
# Analytics
# ========================
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X # Replace with real Google Analytics ID

# ========================
# Military Support Section Configuration
# ========================
MILITARY_SUPPORT_API=https://military-support.example.com/api # External API for military resources
node_modules
