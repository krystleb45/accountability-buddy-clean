# top-most EditorConfig file
root = true

# -------------------------------------------------------------------
# Default settings for all files
# -------------------------------------------------------------------
[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# -------------------------------------------------------------------
# Markdown (allow trailing whitespace for hard line breaks)
# -------------------------------------------------------------------
[*.md]
trim_trailing_whitespace = false

# -------------------------------------------------------------------
# JSON files
# -------------------------------------------------------------------
[*.json]
indent_size = 2

# -------------------------------------------------------------------
# JavaScript / TypeScript
# -------------------------------------------------------------------
[*.js]
indent_size = 2

[*.ts]
indent_size = 2

[*.jsx]
indent_size = 2

[*.tsx]
indent_size = 2

# -------------------------------------------------------------------
# CSS, SCSS, and CSS Modules
# -------------------------------------------------------------------
[*.css]
indent_size = 2

[*.scss]
indent_size = 2

[*.module.css]
indent_size = 2

# -------------------------------------------------------------------
# HTML & XML
# -------------------------------------------------------------------
[*.html]
indent_size = 2

[*.htm]
indent_size = 2

[*.xml]
indent_size = 2

# -------------------------------------------------------------------
# YAML
# -------------------------------------------------------------------
[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

# -------------------------------------------------------------------
# Lockfiles (avoid trimming whitespace)
# -------------------------------------------------------------------
[*.lock]
trim_trailing_whitespace = false

# -------------------------------------------------------------------
# Ignore binary files
# -------------------------------------------------------------------
[*.{png,jpg,jpeg,gif,ico,svg,ttf,woff,woff2,eot}]
trim_trailing_whitespace = false
