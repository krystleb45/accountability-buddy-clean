# General Project Configuration
APP_NAME=AccountabilityBuddy
APP_ENV=development           # Change to "production" for production environments
APP_URL=http://localhost:3000 # Frontend URL
BACKEND_URL=http://localhost:5000 # Backend API URL

# Frontend Environment Variables
NEXT_PUBLIC_API_BASE_URL=http://localhost:5000/api # Public-facing API base URL for the frontend
NEXT_PUBLIC_STRIPE_PUBLIC_KEY=pk_test_1234567890abcdef # Replace with your Stripe public key

# Backend Environment Variables
PORT=5000                     # Port for the backend server
JWT_SECRET=supersecuresecret  # Secret for JWT tokens (ensure this is complex and secure)
DB_HOST=localhost             # Database host
DB_PORT=5432                  # Database port (default for PostgreSQL)
DB_NAME=accountability_buddy  # Database name
DB_USER=your_db_user          # Database user
DB_PASSWORD=your_db_password  # Database password

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_1234567890abcdef # Replace with your Stripe secret key
STRIPE_WEBHOOK_SECRET=whsec_1234567890abcdef # Replace with your Stripe webhook secret

# Email Configuration
EMAIL_HOST=smtp.your-email-provider.com  # SMTP server host
EMAIL_PORT=587                           # SMTP port
EMAIL_USER=your-email@example.com        # SMTP username
EMAIL_PASSWORD=your-email-password       # SMTP password
EMAIL_FROM=Accountability Buddy <noreply@accountabilitybuddy.com>

# AWS Configuration (if applicable)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME=accountability-buddy-assets

# Logging and Debugging
LOG_LEVEL=debug                   # Logging level (debug, info, warn, error)
DEBUG=true                        # Enable/disable debugging

# Third-party Services
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# Analytics
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=UA-12345678-1 # Replace with your Google Analytics tracking ID

# Military Support Section (Specific Configurations)
MILITARY_SUPPORT_API=https://military-support.example.com/api # External API for resources
