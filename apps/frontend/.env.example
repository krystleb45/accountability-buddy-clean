# ========================
# üîê NextAuth Configuration (CRITICAL)
# ========================
# URL of your Next.js frontend (used by NextAuth callbacks)
NEXTAUTH_URL=http://localhost:3000
# Secret for encrypting NextAuth tokens (generate a new one)
NEXTAUTH_SECRET=your-nextauth-secret-here-change-this

# ========================
# üöÄ API Configuration (FIXED - CRITICAL FOR AUTH)
# ========================
# Frontend base URL (where your Next.js app runs)
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# ‚úÖ CRITICAL FIX: API URL should point to Next.js proxy routes, NOT direct Express
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Backend URL for server-side proxy routes to forward to Express
NEXT_PUBLIC_BACKEND_URL=http://localhost:5050

# Swagger documentation (direct to Express)
NEXT_PUBLIC_SWAGGER_URL=http://localhost:5050/api-docs

# ========================
# ‚öôÔ∏è General Application Settings
# ========================
NEXT_PUBLIC_APP_NAME=AccountabilityBuddy
NEXT_PUBLIC_APP_VERSION=1.0.0-dev
NEXT_PUBLIC_DEFAULT_LANGUAGE=en
NEXT_PUBLIC_THEME_MODE=dark

# ========================
# üìä Analytics Settings (Optional)
# ========================
# Google Analytics ID
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# ========================
# üõ†Ô∏è Sentry (Error Tracking) - Optional
# ========================
NEXT_PUBLIC_SENTRY_DSN=https://exampleSentryDsn@sentry.io/project-id


# ========================
# üîê Authentication Settings (Updated)
# ========================
# These now point to Next.js proxy routes instead of direct Express
NEXT_PUBLIC_AUTH_PROVIDER_URL=http://localhost:3000/api/auth
NEXT_PUBLIC_AUTH_CLIENT_ID=dev-client-id

# ========================
# üèóÔ∏è Build / Tooling
# ========================
SKIP_PREFLIGHT_CHECK=true
NEXT_PUBLIC_DEBUG=true
