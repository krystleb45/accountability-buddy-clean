{
  "name": "@ab/backend",
  "version": "1.0.0",
  "description": "Backend for the Accountability Buddy platform",
  "license": "ISC",
  "keywords": [
    "accountability",
    "backend",
    "typescript",
    "goal-tracking",
    "real-time"
  ],
  "scripts": {
    "dev": "cross-env NODE_ENV=development NODE_OPTIONS='--max-old-space-size=4096 --no-deprecation' nodemon",
    "test": "cross-env NODE_ENV=test jest",
    "build": "tsc --build",
    "start": "cross-env NODE_ENV=production node dist/server.js",
    "lint": "eslint --fix",
    "format": "prettier --write",
    "seed:users": "ts-node src/scripts/seedUsers.ts",
    "seed:roles": "ts-node src/scripts/seedRoles.ts",
    "cleanup:logs": "ts-node src/scripts/cleanupLogs.ts",
    "cleanup:roles": "ts-node src/scripts/cleanupRoles.ts",
    "cleanup:users": "ts-node src/scripts/cleanupUsers.ts",
    "cleanup:all": "npm run cleanup:users && npm run cleanup:roles && npm run cleanup:logs",
    "seed:all": "npm run cleanup:all && npm run seed:roles && npm run seed:users",
    "seed:dev": "cross-env NODE_ENV=development ts-node src/scripts/seedUsers.ts",
    "seed:test": "cross-env NODE_ENV=test ts-node src/scripts/seedUsers.ts",
    "seed:prod": "cross-env NODE_ENV=production ts-node src/scripts/seedUsers.ts",
    "cleanup:dev": "cross-env NODE_ENV=development ts-node src/scripts/cleanupRoles.ts",
    "cleanup:test": "cross-env NODE_ENV=test ts-node src/scripts/cleanupRoles.ts",
    "reset:dev": "npm run seed:all",
    "reset:test": "npm run cleanup:all && npm run seed:test",
    "reset:prod": "npm run cleanup:all && npm run seed:prod",
    "email-worker": "ts-node src/queues/emailWorker.ts",
    "check-types": "tsc --noEmit",
    "generate-types": "mtgen -o ./src/types",
    "generate-types-for-frontend": "mtgen -o ../frontend/src/types --no-mongoose --dates-as-strings",
    "knip": "knip"
  },
  "dependencies": {
    "@ab/shared": "*",
    "@ab/transactional": "*",
    "@aws-sdk/client-s3": "^3.758.0",
    "@aws-sdk/s3-request-presigner": "^3.758.0",
    "@mailchimp/mailchimp_transactional": "^1.0.59",
    "aws-sdk": "^2.1692.0",
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.53.0",
    "compression": "^1.7.5",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv-flow": "^4.1.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "helmet": "^7.2.0",
    "hpp": "^0.2.3",
    "http-status": "^2.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongo-sanitize": "^1.1.0",
    "mongoose": "^7.8.7",
    "mongoose-lean-virtuals": "^2.0.0",
    "morgan": "^1.10.0",
    "ms": "^2.1.3",
    "multer": "^1.4.5-lts.1",
    "remeda": "^2.31.1",
    "socket.io": "^4.8.1",
    "stripe": "^18.5.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "xss-clean": "^0.1.4",
    "zod": "^4.0.15"
  },
  "devDependencies": {
    "@ab/eslint-config": "*",
    "@types/aws-sdk": "^0.0.42",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/date-fns": "^2.6.3",
    "@types/express": "^5.0.2",
    "@types/hpp": "^0.2.6",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/mailchimp__mailchimp_transactional": "^1.0.11",
    "@types/mongo-sanitize": "^1.0.3",
    "@types/mongoose": "^5.11.96",
    "@types/morgan": "^1.9.9",
    "@types/ms": "^2.1.0",
    "@types/multer": "^1.4.12",
    "@types/node": "^18.19.130",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.7",
    "@types/validator": "^13.12.2",
    "@types/winston": "^2.4.4",
    "cross-env": "^7.0.3",
    "express": "^4.21.2",
    "jest": "^29.7.0",
    "knip": "^5.70.1",
    "mongoose-tsgen": "^9.5.3",
    "nodemon": "^3.1.9",
    "supertest": "^6.3.4",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}