# ========================
# üåç Environment
# ========================
NODE_ENV=development

# ========================
# üîß Server Configuration
# ========================
PORT=5050
API_URL=http://localhost:5050

# ========================
# üóÑÔ∏è Database Configuration
# ========================
# Local MongoDB
MONGO_URI=mongodb://localhost:27017/accountability-buddy
# OR for cloud MongoDB Atlas:
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/accountability-buddy

# ========================
# üîê JWT Authentication
# ========================
# Generate these secrets using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-here
ACCESS_TOKEN_SECRET=your-access-token-secret-64-characters-minimum-here
REFRESH_TOKEN_SECRET=your-refresh-token-secret-64-characters-minimum-here
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=7d

# ========================
# üåê CORS Configuration
# ========================
CORS_ORIGINS=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5050

# ========================
# üí≥ Stripe Payment Gateway
# ========================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here
STRIPE_API_VERSION=2024-11-20

# Stripe Price IDs (get these from your Stripe Dashboard)
STRIPE_BASIC_MONTHLY_PRICE_ID=price_basic_monthly_id_here
STRIPE_BASIC_YEARLY_PRICE_ID=price_basic_yearly_id_here
STRIPE_PRO_MONTHLY_PRICE_ID=price_pro_monthly_id_here
STRIPE_PRO_YEARLY_PRICE_ID=price_pro_yearly_id_here
STRIPE_ELITE_MONTHLY_PRICE_ID=price_elite_monthly_id_here
STRIPE_ELITE_YEARLY_PRICE_ID=price_elite_yearly_id_here

# ========================
# üìß Email Service Configuration
# ========================
EMAIL_USER=your-email@example.com
EMAIL_CLIENT_ID=your-google-client-id-here
EMAIL_CLIENT_SECRET=your-google-client-secret-here
EMAIL_REFRESH_TOKEN=your-google-refresh-token-here
EMAIL_REDIRECT_URI=https://developers.google.com/oauthplayground

# Fallback SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-app-password

# ========================
# üöÄ Redis Configuration (Optional)
# ========================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password-if-any
REDIS_USE_TLS=false

# ========================
# ‚ö° Security Configuration
# ========================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SESSION_SECRET=your-secure-session-secret-here
SALT_ROUNDS=10

# ========================
# üìù Logging Configuration
# ========================
LOG_LEVEL=info
LOG_DIR=logs
ENABLE_DEBUG=true
ENABLE_REMOTE_LOGGING=false

# ========================
# üåê Frontend Configuration
# ========================
FRONTEND_URL=http://localhost:3000

# ========================
# üîî Web Push Notifications
# ========================
# Generate VAPID keys using: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=your-vapid-public-key-here
VAPID_PRIVATE_KEY=your-vapid-private-key-here
CONTACT_EMAIL=your-contact@example.com

# ========================
# üí∞ Subscription Plan Configuration
# ========================
DEFAULT_TRIAL_DAYS=14
BASIC_MONTHLY_PRICE=5.00
BASIC_YEARLY_PRICE=50.00
PRO_MONTHLY_PRICE=15.00
PRO_YEARLY_PRICE=150.00
ELITE_MONTHLY_PRICE=30.00
ELITE_YEARLY_PRICE=300.00

# ========================
# üß™ Development Options
# ========================
DISABLE_EMAIL_QUEUE=true
DISABLE_REDIS=false
