{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "baseUrl": ".",
    "rootDir": "src",
    "module": "CommonJS",
    "moduleResolution": "node",
    "paths": {
      "@src/*": ["src/*"],
      "@test/*": ["src/test/*"]
    },
    "resolveJsonModule": true,
    "noEmitOnError": false,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "ts-node": {
    "transpileOnly": true,
    "files": true
  }
}
