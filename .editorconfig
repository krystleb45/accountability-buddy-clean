# EditorConfig helps maintain consistent coding styles across editors and IDEs
# Learn more: https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8                    # Use UTF-8 encoding
end_of_line = lf                   # Use LF (Unix-style) line endings
indent_style = space               # Use spaces for indentation
indent_size = 2                    # Use 2 spaces for indentation
trim_trailing_whitespace = true    # Remove trailing whitespace
insert_final_newline = true        # Ensure files end with a newline

# Markdown files (allow trailing whitespace for lists)
[*.md]
max_line_length = off              # Allow long lines in Markdown
trim_trailing_whitespace = false   # Keep trailing whitespace (useful for Markdown lists)

# JSON files (ensure consistent formatting)
[*.json]
indent_size = 2                    # Use 2 spaces for JSON indentation
end_of_line = lf

# YAML files (use consistent 2-space indentation)
[*.yml]
indent_size = 2
end_of_line = lf

# TypeScript & JavaScript files (keep strict formatting)
[*.{js,jsx,ts,tsx}]
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# CSS, SCSS, and HTML files (ensure readability)
[*.css]
indent_size = 2
end_of_line = lf

[*.scss]
indent_size = 2
end_of_line = lf

[*.html]
indent_size = 2
end_of_line = lf

# Python files (use PEP-8 standard: 4 spaces)
[*.py]
indent_style = space
indent_size = 4
end_of_line = lf

# Shell scripts (standardized with 2 spaces)
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf

# Configuration files
[*.config.*]
indent_size = 2
end_of_line = lf

# Log files (do not modify automatically)
[*.log]
trim_trailing_whitespace = false
insert_final_newline = false

# Ignore minified files
[*.min.*]
trim_trailing_whitespace = false
insert_final_newline = false
indent_size = 2

# Ignore build files or binary files
[build/*, dist/*, *.lock, *.bin]
insert_final_newline = false
trim_trailing_whitespace = false
